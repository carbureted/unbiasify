{
  "name": "Unbiasify",
  "description":
    "Unbiasify hides names and profile photos on social networks so you can focus on what actually matters when recruiting.",
  "version": "1.7.37",

  "background": {
    "persistent": false,
    "scripts": ["dist/ui/index.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Unbiasify",
    "default_popup": "index.html"
  },

  "icons": {
    "64": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://angel.co/*",
        "https://repl.it/*",
        "https://*.greenhouse.io/*",
        "https://hire.lever.co/*",
        "https://hire.sandbox.lever.co/*",
        "https://*.github.com/*",
        "https://www.meetup.com/*"
      ],
      "js": ["dist/contentScripts/index.js"]
    }
  ],

  "manifest_version": 2,
  "content_security_policy":
    "script-src 'self'; object-src 'self'",
  "permissions": ["activeTab", "storage"]
}
